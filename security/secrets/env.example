# Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# API Endpoint for log collection
API_ENDPOINT=https://your-cloud-vm.com/collect

# Authentication Token (will be encrypted with GPG)
# TOKEN=your-secret-token-here

# Cloud VM Configuration
CLOUD_VM_IP=your-vm-ip-here
CLOUD_VM_USER=your-username

# WireGuard Configuration (if using VPN)
WG_INTERFACE=wg0
WG_PEER_PUBLIC_KEY=your-peer-public-key

# Loki Configuration
LOKI_URL=http://your-loki-instance:3100
LOKI_USERNAME=your-loki-user
# LOKI_PASSWORD=your-loki-password

# Grafana Configuration
GRAFANA_URL=http://your-grafana-instance:3000
GRAFANA_API_KEY=your-grafana-api-key

# Docker Hub (for pushing images)
DOCKER_USERNAME=your-dockerhub-username
# DOCKER_PASSWORD=your-dockerhub-password

# DigitalOcean / Cloud Provider
# DO_API_TOKEN=your-digitalocean-token
# DO_SPACES_KEY=your-spaces-key
# DO_SPACES_SECRET=your-spaces-secret

